{
	"name": "darkti.de",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "react-router build",
		"db:generate": "dotenv -- drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply --local DB",
		"db:migrate-production": "dotenv -- drizzle-kit migrate",
		"dev": "react-router dev",
		"start": "wrangler dev",
		"deploy": "npm run build && wrangler deploy --env resizer && wrangler deploy",
		"typecheck": "wrangler types && react-router typegen && tsc -b"
	},
	"dependencies": {
		"@react-router/node": "^7.12.0",
		"@react-router/serve": "^7.12.0",
		"drizzle-orm": "~0.44.4",
		"drizzle-zod": "^0.8.3",
		"isbot": "^5.1.29",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-router": "^7.12.0",
		"zod": "^4.0.17"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250816.0",
		"@react-router/dev": "^7.12.0",
		"@tailwindcss/vite": "^4.1.12",
		"@types/node": "^24",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"dotenv-cli": "^10.0.0",
		"drizzle-kit": "~0.31.4",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"tailwindcss": "^4.1.12",
		"typescript": "^5.9.2",
		"vite": "^7.1.2",
		"vite-tsconfig-paths": "^5.1.4",
		"wrangler": "^4.30.0"
	},
	"prettier": {
		"semi": false,
		"trailingComma": "all",
		"useTabs": true,
		"plugins": [
			"prettier-plugin-tailwindcss"
		]
	}
}
